<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<style name="ExoMediaButton.Previous">
    <item name="android:visibility">gone</item>
</style>
    <style name="ExoMediaButton.Next">
        <item name="android:visibility">gone</item>
    </style>
    <style name="ExoMediaButton.FastForward">
        <item name="android:visibility">gone</item>
    </style>
    <style name="ExoMediaButton.Pause">
        <item name="android:visibility">gone</item>
    </style>
    <style name="ExoMediaButton.Play">
        <item name="android:visibility">gone</item>
    </style>
    <style name="ExoMediaButton.Rewind">
        <item name="android:visibility">gone</item>
    </style>
    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="CustomShowCaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E61E2020</item>
        <item name="sv_detailTextAppearance">@style/CustomTitle</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
